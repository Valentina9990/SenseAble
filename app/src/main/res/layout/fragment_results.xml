<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".results.ResultsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="Completado"
        android:textColor="@color/tertiary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Contenedor con Scroll para el texto extraído -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#F0F4F8"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_extracted_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Aquí se mostrará el texto largo extraído de la imagen para que el usuario pueda revisarlo antes de realizar cualquier acción..."/>

        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Botones de Acción -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play_audio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Reproducir audio"
        android:backgroundTint="@color/secondary"
        android:textColor="@color/white"
        app:cornerRadius="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_export_text"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Exportar como .txt"
        android:textColor="@color/primary"
        app:strokeColor="@color/primary"
        app:cornerRadius="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_export_audio"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Exportar como .mp3"
        android:textColor="@color/primary"
        app:strokeColor="@color/primary"
        app:cornerRadius="16dp"/>

</LinearLayout>
