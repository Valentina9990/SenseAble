<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".results.ResultsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        android:text="Completado"
        android:textColor="@color/tertiary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tu documento ha sido convertido en audio"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_primary"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Fila Archivo.txt -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Archivo.txt"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_export_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exportar texto"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="16dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <!-- Fila Archivo.mp3 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Archivo.mp3"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_export_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exportar audio"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="16dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play_audio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Reproducir audio"
        android:backgroundTint="@color/white"
        android:textColor="@color/primary"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp"
        app:cornerRadius="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
